# files
alias ls="ls --color=auto"
alias ll="ls -lhFG"
alias la="ls -lahG"
alias l="ls -CFG"
alias mkdir="mkdir --parents"
alias grep='grep --color=auto --exclude-dir=".git" --exclude-dir="node_modules"'

# system
alias wsldown="wsl.exe --shutdown"
alias zs=". ~/.zshrc"
alias aptup="sudo apt update && sudo apt upgrade"
alias neofetch="$HOME/code/bash-scripts/system/wslfetch.sh"
alias sshallow="sudo ufw allow ssh"
alias sshdeny="sudo ufw deny ssh"

# net
alias pong="ping -c 3 www.google.com"
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias weather="curl 'wttr.in/?nq0'"

# mirrors websites with wget, example: 'siteget . www.url.com'
alias siteget="wget --mirror -p --convert-links -P"

# programs
alias cat="bat"
alias j="~/tools/JohnTheRipper/run/john"
alias v="nvim"
alias m="mutt"

# git
alias gc="git commit -S"
alias gcm="git commit"
alias gap="git add -p"
alias gcl="git clone"
alias gph="git push"
alias gpl="git pull"
alias gs="git status"
alias gst="git stash"
alias gstp="git stash -pop"
alias gf="git fetch"
alias gcp="git cherry-pick"
alias gl="git lg"
alias gls="git log --show-signature"
